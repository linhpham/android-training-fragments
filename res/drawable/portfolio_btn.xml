<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item 
		android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#00CBFF"
                android:endColor="#0077FF"
                android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="#18B8B8" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
	</item>
	<item 
		android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#00CBFF"
                android:endColor="#0077FF"
                android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="#18B8B8" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
	</item>
    <item>        
        <shape>
            <gradient
                android:startColor="#FFBF5E"
                android:endColor="#FF6600"
                android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="#FFD28E" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
    </item>
</selector>